<section id="create-container">
    <div class="create-container-info">
        <h1>Create Blog</h1>
        <form action="/blog/create" method="post">
            <label>Title:</label>
            <input type="text" id="title" name="title" value="{{blog.title}}">

            <label>Image:</label>
            <input type="text" id="image" placeholder="http://..." name="image" value="{{blog.image}}">

            <label>Content:</label>
            <textarea id="content" name="content">{{blog.content}}</textarea>

            <label>Blog Category:</label>
            <input type="text" id="category" name="category" value="{{blog.category}}">

            <input type="submit" id="btn" value="POST">
        </form>
    </div>
</section>