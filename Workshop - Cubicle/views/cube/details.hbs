<section>
    {{#with cubicle}}
    <h1>{{name}}</h1>
    <img class="cube" src="{{imageUrl}}">
    <div class="details">
        <p><span>Description: </span>{{description}}</p>
        <p><span>Difficulty level: </span>{{difficultyLevel}}</p>
        <div style="display: flex">
            <a class="btn" href="/">Back</a>

            {{#if isOwner}}
            <a class="btn" href="/cube/edit/{{_id}}">Edit</a>
            <a class="btn" href="/accessory/attach/{{_id}}">Attach</a>
            <a class="btn" href="/cube/delete/{{_id}}">Delete</a>
            {{/if}}
        </div>
    </div>

    <h2>Accessories</h2>

    <div class="accessories">
        {{#if accessories}}

        {{#each accessories}}
        <div class="accessory">
            <img src="{{imageUrl}}" alt="{{imageUrl}}">
            <h3>{{name}}</h3>
            <p>{{description}}</p>
        </div>
        {{/each}}

        {{else}}

        <div class="not-found">
            <h3 class="italic">This cube has no accessories yet...</h3>
        </div>
        {{/if}}
    </div>
    {{/with}}
</section>