<section>
    <h1>Edit Cube</h1>
    <div class="form">
        <form action="/cube/edit/{{cubicle._id}}" method="post">
            {{#if error}}
            <div class="error-box">
                {{#each error}}
                <p><span class="error">{{this}}</span></p>
                {{/each}}
            </div>
            {{/if}}
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{cubicle.name}}">
            <label for="description">Description</label>
            <textarea id="description" name="description">{{cubicle.description}}</textarea>
            <label for="image">ImageUrl</label>
            <input type="text" id="image" name="imageUrl" value="{{cubicle.imageUrl}}">
            <label for="difficulty">Difficulty</label>
            <select id="difficulty" name="difficultyLevel" value="{{cubicle.difficultyLevel}}" />
            <option value="1">1 - Very Easy</option>
            <option value="2">2 - Easy</option>
            <option value="3">3 - Medium (Standard 3x3)</option>
            <option value="4">4 - Intermediate</option>
            <option value="5">5 - Expert</option>
            <option value="6">6 - Hardcore</option>
            </select>
            <input type="submit" value="Edit">
        </form>
    </div>
</section>